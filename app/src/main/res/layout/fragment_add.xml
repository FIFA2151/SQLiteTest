<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.test.sqlitetest.AddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/AddFragmentTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="casual"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:lineSpacingExtra="12sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Student Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="46dp"
            android:id="@+id/student_name_text_view"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignTop="@+id/student_name_text_view"
            android:layout_toEndOf="@+id/student_name_text_view"
            android:layout_alignBaseline="@id/student_name_text_view"
            android:layout_marginStart="11dp"
            android:id="@+id/student_name"
            android:selectAllOnFocus="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="RollNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_below="@id/student_name_text_view"
            android:layout_marginTop="25dp"
            android:id="@+id/roll_num_text_view"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignTop="@+id/roll_num_text_view"
            android:layout_toEndOf="@+id/roll_num_text_view"
            android:layout_alignBaseline="@id/roll_num_text_view"
            android:layout_marginStart="11dp"
            android:id="@+id/roll_num"
            android:selectAllOnFocus="true"
            android:layout_alignParentEnd="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/addToDatabase"
            android:layout_below="@+id/roll_num"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
